<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_payment_method_wizard" model="ir.ui.view">
        <field name="name">Payment Method Update</field>
        <field name="model">payment.method.improve</field>
        <field name="arch" type="xml">
            <form string="Payment Method Update">
                <group>
                    <field name= "payment_method_id"/>
                </group>
                <footer>
                    <button name="do_update_method" type="object" string="Update Payment Method" class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="act_payment_method_selection" model="ir.actions.act_window">
        <field name="name">payment method selection</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">payment.method.improve</field>
        <field name="view_mode">form</field>
        <field name="context">{}</field>
        <field name="target">new</field>
    </record>
</odoo>