<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <record id="mrp_bom_form_view_inherit_mrp" model="ir.ui.view">
            <field name="name">mrp.bom.view.form.inherit</field>
            <field name="model">mrp.bom</field>
            <field name="inherit_id" ref="mrp.mrp_bom_form_view"/>
            <field name="arch" type="xml">
                <field name="type" position="after">
                    <field name="expyeld"/>
                    <field name="input"/>
                    <field name="output"/>
                </field>

            </field>
        </record>

        <record id="stock_barcode.stock_picking_action_kanban" model="ir.actions.act_window">
            <field name="name">Operations</field>
            <field name="res_model">stock.picking</field>
            <field name="view_mode">kanban,form</field>
            <field name="view_id" ref="stock_barcode.stock_picking_kanban"/>
            <field name="context">{
                'form_view_initial_mode': 'edit',
                'contact_display': 'partner_address',
                'search_default_available': 1,
                'search_default_waiting'  :1,
                'force_detailed_view': True
            }</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new transfer
                </p><p>
                    Transfers allow you to move products from one location to another.
                </p>
            </field>
        </record>
    
    </data>
    

</odoo>
