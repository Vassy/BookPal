<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mrp_production_form_view_inherit_bista_inno_extend" model="ir.ui.view">
        <field name="name">mrp.production.inherit.form.bista.inno</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='bom_id']" position="after">
                <field name="is_master_admin_user" invisible="1"/>
            </xpath>
            <xpath expr="//button[@name='button_unplan']" position="attributes">
                <attribute name="attrs">{'invisible': ['|','&amp;',('is_master_admin_user','=', False),('state', '=', 'done'),'|',('is_planned', '=', False),('state', '=', 'cancel')]}</attribute>
            </xpath>
            <xpath expr="//button[@name='button_scrap']" position="attributes">
                <attribute name="attrs">{'invisible': ['|','&amp;',('is_master_admin_user','=', False),('state', '=', 'done'),('state', 'in', ('cancel', 'draft'))]}</attribute>
            </xpath>
            <xpath expr="//button[@name='action_toggle_is_locked'][1]" position="attributes">
                <attribute name="attrs">{'invisible': ['|','&amp;',('is_master_admin_user','=', False),('state', '=', 'done'),'|', ('show_lock', '=', False), ('is_locked', '=', False)]}</attribute>
            </xpath>
            <xpath expr="//button[@name='action_toggle_is_locked'][2]" position="attributes">
                <attribute name="attrs">{'invisible': ['|','&amp;',('is_master_admin_user','=', False),('state', '=', 'done'),'|', ('show_lock', '=', False), ('is_locked', '=', True)]}</attribute>
            </xpath>
            <xpath expr="//button[@name='button_unbuild']" position="attributes">
                <attribute name="attrs">{'invisible': ['|',('is_master_admin_user','=', False),('state', '!=', 'done')]}</attribute>
            </xpath>
        </field>
    </record>
</odoo>