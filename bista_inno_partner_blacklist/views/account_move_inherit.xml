<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>

        <record id="model_account_move_action_update_records" model="ir.actions.server">
            <field name="name">Update Different Currency Amount</field>
            <field name="model_id" ref="account.model_account_move"/>
            <field name="binding_model_id" ref="account.model_account_move"/>
            <field name="binding_view_types">list</field>
            <field name="state">code</field>
            <field name="code">action = records.update_records()</field>
        </record>

        <record id="model_account_move_action_update_method" model="ir.actions.server">
            <field name="name">Update Payment Method</field>
            <field name="model_id" ref="account.model_account_move"/>
            <field name="binding_model_id" ref="account.model_account_move"/>
            <field name="binding_view_types">list</field>
            <field name="state">code</field>
            <field name="code">action = records.update_payment_method()</field>
        </record>
    

