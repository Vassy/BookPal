<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_saleorder_document_note" inherit_id="bista_sale.report_saleorder_document_extended">
        <xpath expr="//div[hasclass('oe_structure')]" position="after">
            <style>
                .table td{
                    border: none;
                    padding: 2px;
                }
            </style>
            <div>
                <h5 style="margin-top:50px;border-bottom:solid 1px;">Notes</h5>
                <div>
                    <span class="mb4" t-field="doc.common_pick_note"/>
                </div>
            </div>
        </xpath>
        <xpath expr="//t[@t-foreach='doc.order_line']/tr" position="after">
            <tr style="border-bottom:1px solid black !important;">
                <t t-if="not line.display_type">
                    <td style="border: none !important"></td>
                    <td colspan="2" style="border: none !important" class="text-left">
                        <b><span t-if="line.picking_note">Product Notes:</span></b>
                        <span t-field="line.picking_note"/>
                    </td>
                    <td style="border: none !important"></td>
                    <td style="border: none !important"></td>
                    <td style="border: none !important"></td>
                    <td style="border: none !important"></td>
                    <td style="border: none !important"></td>
                    <td t-if="line_taxes" style="border: none !important"></td>
                    <td style="border: none !important"></td>
                </t>
            </tr>
        </xpath>
        <xpath expr="//t[@t-foreach='doc.order_line']/tr" position="attributes">
            <attribute name="style">border-top: 1px solid black !important;</attribute>
        </xpath>
    </template>
</odoo>
