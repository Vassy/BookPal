                    <div t-if="o.picking_type_id.code=='outgoing' and partner">
                        <span>
                            <strong>Customer Address:</strong>
                        </span>
                    </div>
                    <div t-if="partner" name="partner_header">
                        <t t-if="partner.commercial_partner_id.parent_id.name">
                            <div>
                                <span t-field="partner.commercial_partner_id.name"/>
                                <br/>
                                <span t-field="partner.commercial_partner_id.parent_id.name"/>
                            </div>
                            <div t-field="partner.commercial_partner_id"
                                 t-options='{"widget": "contact", "fields": ["address", "phone"], "no_marker": True, "phone_icons": True}'/>
                        </t>
                        <t t-else="">
                            <div t-field="partner.commercial_partner_id"
                                 t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                            <p t-if="partner.sudo().commercial_partner_id.vat"><t
                                    t-esc="o.company_id.country_id.vat_label or 'Tax ID'"/>:
                                <span t-field="partner.sudo().commercial_partner_id.vat"/>
                            </p>
                        </t>
                    </div>
                </div>
            </div>
        </xpath>
        <xpath expr="//t[@t-set='address']" position="replace"/>
        <xpath expr="//h2" position="replace"/>
        <xpath expr="//t[@t-set='information_block']" position="replace"/>
        <xpath expr="//table[@name='stock_move_table']" position="attributes">
            <attribute name="style">margin-top: 2rem !important;</attribute>
        </xpath>
        <xpath expr="//table[hasclass('table', 'table-sm')]/thead/tr/th[1]" position="after">
            <th name="th_format">
                <strong>Format</strong>
            </th>
        </xpath>
        <xpath expr="//table[hasclass('table', 'table-sm')]/tbody/tr/td[1]" position="after">
            <td name="th_format">
                <span style="font-weight:normal" t-field="move.product_id.product_format"/>
            </td>
        </xpath>
        <xpath expr="//table[hasclass('table', 'table-sm', 'mt48')]/thead/tr/th[1]" position="after">
            <th name="th_format">
                <strong>Format</strong>
            </th>
        </xpath>
    </template>
    <template id="bista_purchase_stock_report_delivery_has_serial_move_line"
              inherit_id="stock.stock_report_delivery_has_serial_move_line">
        <xpath expr="//td[1]" position="after">
            <td name="td_format">
                <span style="font-weight:normal" t-field="move_line.product_id.product_format"/>
            </td>
        </xpath>
    </template>
    <template id="bista_purchase_stock_report_delivery_aggregated_move_lines"
              inherit_id="stock.stock_report_delivery_aggregated_move_lines">
        <xpath expr="//tr/td[1]" position="after">
            <td name="td_format">
                <span style="font-weight:normal" t-field="aggregated_lines[line]['product'].product_format"/>
            </td>
        </xpath>
    </template>

    <record id="paperformat_stock_picking_report" model="report.paperformat">
        <field name="name">Invoice/Bill Report</field>
        <field name="default" eval="False"/>
        <field name="disable_shrinking" eval="True"/>
        <field name="format">A4</field>
        <field name="orientation">Portrait</field>
        <field name="header_spacing">39</field>
        <field name="margin_top">40</field>
        <field name="margin_bottom">18</field>
        <field name="margin_left">7</field>
        <field name="margin_right">7</field>
        <field name="header_line">False</field>
        <field name="dpi">120</field>
    </record>

    <record id="stock.action_report_picking" model="ir.actions.report">
        <field name="paperformat_id" ref="bista_purchase.paperformat_stock_picking_report"/>
    </record>

    <record id="stock.action_report_delivery" model="ir.actions.report">
        <field name="paperformat_id" ref="bista_purchase.paperformat_stock_picking_report"/>
    </record>
</odoo>