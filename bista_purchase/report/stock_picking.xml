                    <t t-if="o.state !='done' and o.picking_type_code =='incoming'">
                        <h5 style="font-size: 20px;">Receipt Date:
                            <t t-esc="context_timestamp(o.scheduled_date).strftime('%Y-%m-%d')" t-options='{"widget": "date"}'/>
