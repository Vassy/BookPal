<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="bista_purchase_report_invoice_document_inherit" inherit_id="account.report_invoice_document">

        <xpath expr="//t[@t-call='web.external_layout']" position="attributes">
            <attribute name="t-call">bista_report_header_footer.shipment_custom_header</attribute>
        </xpath>
        <xpath expr="//div[hasclass('page')]" position="inside">
            <t t-set="o" t-value="o.with_context(lang=o.partner_id.lang)"/>
            <div class="page ">
                <div t-set="address">
                    <span>
                        <strong>BILL To</strong>
                    </span>
                    <t t-if="o.partner_id.parent_id.name">
                        <div>
                            <span t-field="o.partner_id.name"/>
                            <br/>
                            <span t-field="o.partner_id.parent_id.name"/>
                        </div>
                        <div t-field="o.partner_id"
                             t-options='{"widget": "contact", "fields": ["address", "phone"], "no_marker": True, "phone_icons": True}'/>
                    </t>
                    <t t-else="">
                        <div t-field="o.partner_id"
                             t-options='{"widget": "contact", "fields": ["address","name","phone"], "no_marker": True, "phone_icons": True}'/>
                    </t>
                    <div t-if="o.partner_id.vat" class="mt16">
                        <t t-if="o.company_id.account_fiscal_country_id.vat_label"
                           t-esc="o.company_id.account_fiscal_country_id.vat_label" id="inv_tax_id_label"/>
                        <t t-else="">Tax ID</t>:
                        <span t-field="o.partner_id.vat"/>
                    </div>
                </div>
                <!--                <t t-if="o.partner_shipping_id and (o.partner_shipping_id != o.partner_id)">-->
                <t t-set="information_block" t-if="o.move_type == 'out_invoice'">
                    <div name="shipping_address_block" >
                        <strong>Shipping Address:</strong>
                        <t t-if="o.partner_shipping_id.parent_id.name">
                            <div>
                                <span t-field="o.partner_shipping_id.name"/>
                                <br/>
                                <span t-field="o.partner_shipping_id.parent_id.name"/>
                            </div>
                            <div t-field="o.partner_id"
                                 t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True, "phone_icons": True}'/>
                        </t>
                        <t t-else="">
                            <div t-field="o.partner_shipping_id"
                                 t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}'/>
                        </t>

                    </div>
                </t>
                <t t-set="report_info" class="col-6 text-right mb4">
                    <h2 t-if="o.move_type == 'out_invoice' and o.state == 'posted'">Invoice</h2>
                    <h2 t-if="o.move_type == 'out_invoice' and o.state == 'draft'">Draft Invoice</h2>
                    <h2 t-if="o.move_type == 'out_invoice' and o.state == 'cancel'">Cancelled Invoice</h2>
                    <h2 t-if="o.move_type == 'out_refund'">Credit Note</h2>
                    <h2 t-if="o.move_type == 'in_refund'">Vendor Credit Note</h2>
                    <h2 t-if="o.move_type == 'in_invoice'">Vendor Bill</h2>
                    <!--                    <h2 t-if="o.name != '/'" t-field="o.name"/>-->
                    <h2>
                        <strong>
                            <t t-esc="o.name"/>
                        </strong>
                    </h2>
                    <strong t-if="o.state == 'posted'">Date:
                        <t t-esc="o.invoice_date" t-options='{"widget": "date"}'/>
                    </strong>
                    <br/>
                </t>
                <t t-set="custom_information_block">
                    <t t-if="doc_model == 'account.move' and o.move_type in ['out_invoice', 'out_refund', 'in_invoice', 'in_refund']">
                        <t t-if="o.move_type == 'out_invoice'">
                            <strong>SO #:</strong>
                            <t t-esc="o.invoice_origin"/>
                            <br/>
                        </t>
                        <t t-if="o.move_type == 'in_invoice'">
                            <strong>PO #:</strong>
                            <t t-esc="o.invoice_origin"/>
                            <br/>
                        </t>
                        <t t-foreach="request.env['sale.order'].sudo().search([('name', '=', o.invoice_origin)])"
                           t-as="sale">
                            <strong>Order Date:</strong>
                            <t t-esc="sale.date_order" t-options='{"widget": "date"}'/>
                            <br/>
                        </t>
                        <t t-foreach="request.env['purchase.order'].sudo().search([('name', '=', o.invoice_origin)])"
                           t-as="purchase">
                            <strong>Order Arrive By Date:</strong>
                            <t t-esc="purchase.date_order" t-options='{"widget": "date"}'/>
                            <br/>
                        </t>
                        <t t-if="o.move_type == 'out_invoice' and o.state == 'posted'">
                            <strong>Invoice Date:</strong>
                            <t t-esc="o.invoice_date_due"/>
                            <br/>
                        </t>
                        <t t-if="o.move_type == 'in_invoice' and o.state == 'posted'">
                            <strong>Bill Date:</strong>
                            <t t-esc="o.invoice_date_due"/>
                            <br/>
                        </t>
                        <strong>BookPal Account # :</strong>
                        <t t-esc="428475"/>
                        <br/>
                        <strong>Client PO Number</strong>
                        <t t-esc="o.sale_order_id.client_order_ref"/>
                        <br/>
                        <strong>Payment Terms:</strong>
                        <t t-esc="o.invoice_payment_term_id.name"/>
                        <br/>
                        <strong>Salesperson:</strong>
                        <t t-esc="o.invoice_user_id.name"/>
                        <br/>
                    </t>
                </t>
            </div>
        </xpath>
        <xpath expr="//thead" position="replace">
            <thead style="border: 1px solid black; margin-top:20px;">
                <span style="color: black; font-weight: bold; margin-bottom: 0px; margin-left: 5px; margin-top: 30px">
                    Product Details
                </span>
                <tr>
                    <th class="text-center"
                        style="border-top: 1px solid black;border-bottom: 1px solid black;border-right: 1px solid black;">
                        <strong>ISBN</strong>
                    </th>
                    <th class="text-center"
                        style="border-top: 1px solid black;border-bottom: 1px solid black;border-right: 1px solid black;">
                        <strong>Title</strong>
                    </th>
                    <th class="text-center"
                        style="border-top: 1px solid black;border-bottom: 1px solid black;border-right: 1px solid black;">
                        <strong>Format</strong>
                    </th>
                    <th class="text-center"
                        style="border-top: 1px solid black;border-bottom: 1px solid black;border-right: 1px solid black;">
                        <strong>Qty</strong>
                    </th>
                    <t t-if="o.move_type == 'out_invoice'">
                        <th class="text-center text-danger"
                            style="border-top: 1px solid black;border-bottom: 1px solid black; border-right: 1px solid black;">
                            <strong>Unit</strong>
                        </th>
                    </t>
                    <t t-if="o.move_type == 'in_invoice'">
                        <th class="text-center "
                            style="border-top: 1px solid black;border-bottom: 1px solid black; border-right: 1px solid black;">
                            <strong>Cover</strong>
                        </th>
                        <th class="text-center "
                            style="border-top: 1px solid black;border-bottom: 1px solid black; border-right: 1px solid black;">
                            <strong>Discount</strong>
                        </th>
                        <th class="text-center text-danger"
                            style="border-top: 1px solid black;border-bottom: 1px solid black; border-right: 1px solid black;">
                            <strong>BP Price</strong>
                        </th>
                    </t>
                    <th name="th_taxes" style="display:none !important;"
                        t-attf-class="text-left {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                        <span>Taxes</span>
                    </th>
                    <th class="text-center"
                        style="border-top: 1px solid black;border-bottom: 1px solid black; border-right: 1px solid black;">
                        <strong>Total</strong>
                    </th>
                </tr>
            </thead>
        </xpath>
        <xpath expr="//t[@t-if='not line.display_type']" position="replace">
            <t t-if="not line.display_type">
                <td id="td_default_code" class="text-left"
                    style="border-bottom: 1px solid black;border-right: 1px solid black;border-left: 1px solid black;border-top: 1px solid black;">
                    <span t-field="line.product_id.isbn"/>
                </td>
                <td id="product"
                    style="border-bottom: 1px solid black;border-right: 1px solid black;border-top: 1px solid black;">
                    <span t-field="line.name"/>
                </td>
                <td class="text-center" name="td_format"
                    style="border-bottom: 1px solid black;border-right: 1px solid black;border-top: 1px solid black; ">
                    <span t-field="line.product_id.product_format"/>
                </td>
                <td class="text-right"
                    style="border-bottom: 1px solid black;border-right: 1px solid black;border-top: 1px solid black;">
                    <span t-field="line.quantity"/>
                </td>
                <t t-if="o.move_type == 'out_invoice'">
                    <td class="text-right" name="td_cover"
                        style="border-bottom: 1px solid black;border-right: 1px solid black;border-top: 1px solid black;">
                        <span t-field="line.sale_line_ids.discounted_price"/>
                    </td>
                </t>
                <t t-if="o.move_type == 'in_invoice'">
                    <td class="text-right" name="td_cover"
                        style="border-bottom: 1px solid black;border-right: 1px solid black;border-top: 1px solid black;">
                        <span t-field="line.price_unit"/>
                    </td>
                    <td class="text-right" name="td_discount"
                        style="border-bottom: 1px solid black;border-right: 1px solid black;border-top: 1px solid black;">
                        <div>
                            <span t-field="line.discount"/>%
                        </div>
                    </td>
                    <td class="text-right text-danger" name="td_bp_price"
                        style="border-bottom: 1px solid black;border-right: 1px solid black;border-top: 1px solid black;">
                        <span t-field="line.purchase_line_id.disc_price_unit"/>
                    </td>
                </t>
                <td t-attf-class="text-left {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"
                    style="display:none !important;">
                    <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_ids))" id="line_tax_ids"/>
                </td>

                <td class="text-right"
                    style="border-bottom: 1px solid black;border-right: 1px solid black;border-top: 1px solid black; margin: auto; width: 111px;" >
                    <span t-field="line.price_subtotal"
                          t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                </td>
            </t>
        </xpath>
        <xpath expr="//p[@name='payment_communication']" position="replace"/>
        <xpath expr="//div[@name='comment']" position="replace">
            <div class="mt-5 mx-3" t-if="o.narration">
                <strong>Invoice Terms and Conditions
                </strong>
                <p class="mb-1" t-field="o.narration" style="margin-left: 50px;"/>
            </div>
        </xpath>

        <xpath expr="//div[@id='total']/div/table" position="attributes">
            <attribute name="style">width: 50.9% !important; margin-left: 49.2% !important;</attribute>
        </xpath>
        <xpath expr="//table[@name='invoice_line_table']" position="attributes">
            <attribute name="style">margin-bottom: 0rem; margin-top: 5px;</attribute>
        </xpath>
        <xpath expr="//div[@id='informations']" position="replace"/>
        <xpath expr="//h2" position="replace"/>
        <xpath expr="//div[hasclass('page')]" position="attributes">
            <attribute name="style">margin-top: 50px;</attribute>
        </xpath>
    </template>
    <template id="document_tax_totals_extended" inherit_id="account.document_tax_totals">
        <xpath expr="//td[1]" position="replace">
            <td style="border-right: 1px solid black;border-left: 1px solid black;border-bottom: 1px solid black; ">
                <strong>Subtotal</strong>
            </td>
        </xpath>
        <xpath expr="//td[2]" position="attributes">
            <attribute name="style">border-right: 1px solid black;</attribute>
        </xpath>
        <xpath expr="//t[@t-as='subtotal']" position="before">
            <t t-if="o.move_type == 'in_invoice'">
                <tr class="border-black o_subtotal">
                    <td style="border-left: 1px solid black; width:46%">
                        <strong>Total W/D</strong>
                    </td>
                    <td class="text-right"
                        style="border-left: 1px solid black; border-right: 1px solid black; margin: auto;">
                        <!--                        <t t-esc="o.line_ids.purchase_order_id.without_disc_amount_untaxed"/>-->
                        <t t-foreach="request.env['purchase.order'].sudo().search([('name', '=', o.invoice_origin)])"
                           t-as="purchase">
                            <t t-esc="purchase.without_disc_amount_untaxed"
                               t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                        </t>
                    </td>
                </tr>
                <tr class="border-black o_subtotal">
                    <td style="border-left: 1px solid black;">
                        <strong>Discount</strong>
                    </td>
                    <td class="text-right" style="border-left: 1px solid black;border-right: 1px solid black;">
                        <span t-esc="o.invoice_line_ids.purchase_order_id.total_discount_amount"
                              t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                    </td>
                </tr>
            </t>
            <t t-if="'groups_by_subtotal' in tax_totals and len(tax_totals['groups_by_subtotal']) == 0">
                <t t-if="o.move_type == 'in_invoice'">
                    <tr class="border-black o_subtotal">
                        <td style="border-left: 1px solid black; border-right: 1px solid black;">
                            <strong>Subtotal</strong>
                        </td>
                        <td class="text-right" style="border-right: 1px solid black;">
                            <span t-esc="o.invoice_line_ids.purchase_order_id.without_disc_amount_untaxed + o.line_ids.purchase_order_id.total_discount_amount"
                                  t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                        </td>
                    </tr>
                </t>
                <t t-if="o.move_type == 'out_invoice'">
                    <tr class="border-black o_subtotal">
                        <td style="border-left: 1px solid black; border-right: 1px solid black; border-right: 1px solid black;">
                            <strong>Subtotal</strong>
                        </td>
                        <td class="text-right" style="border-left: 1px solid black; border-right: 1px solid black;">
                            <span t-esc="o.amount_untaxed"
                                  t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                        </td>
                    </tr>
                </t>
                <tr class="border-black o_subtotal">
                    <td style="border-left: 1px solid black; border-right: 1px solid black;">
                        <strong>Tax</strong>
                    </td>
                    <td class="text-right" style="border-right: 1px solid black;">
                        <span t-esc="0.0" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                    </td>
                </tr>
            </t>
        </xpath>
        <xpath expr="//tr[hasclass('o_total')]" position="before">
            <tr class="border-black o_subtotal">
                <td style="border-left: 1px solid black; border-right: 1px solid black;  border-top: 1px solid black;">
                    <strong>Shipping</strong>
                </td>
                <td class="text-right" style="border-right: 1px solid black;border-top: 1px solid black;">
                    <div>
                        <span t-esc="0.0" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                    </div>
                </td>
            </tr>
        </xpath>
        <xpath expr="//tr[hasclass('o_total')]/td[1]" position="attributes">
            <attribute name="style">border-left: 1px solid black; ;border-right: 1px solid black;border-bottom: 1px
                solid black;
                background-color:#CC5500;
            </attribute>
        </xpath>
        <xpath expr="//tr[hasclass('o_total')]/td[2]" position="attributes">
            <attribute name="style">border-right: 1px solid black;border-bottom: 1px solid black;
                background-color:#CC5500;font-weight: bold;
            </attribute>
        </xpath>
    </template>
    <template id="tax_groups_totals_extended" inherit_id="account.tax_groups_totals">
        <xpath expr="//t[@t-else='']//td[2]" position="attributes">
            <attribute name="class">text-right o_price_total bg-light</attribute>
            <attribute name="style">margin-right: 2px; border-left: 1px solid black;border-right: 1px solid
                black;border-top: 1px solid black;
            </attribute>
        </xpath>
        <xpath expr="//t[@t-else='']//td[1]/span" position="replace">
            <strong class="text-nowrap" t-esc="amount_by_group['tax_group_name']"/>
        </xpath>
        <xpath expr="//t[@t-else='']//td[1]" position="attributes">
            <attribute name="style">border-left: 1px solid black;</attribute>
        </xpath>
    </template>
</odoo>
