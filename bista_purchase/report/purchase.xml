        <!--        <xpath expr="//t[@t-foreach='o.order_line']" position="before">-->
        <!--            <t t-set="sn" t-value="9780743477116"/>-->
        <!--        </xpath>-->
        <xpath expr="//t[@t-if='not line.display_type']" position="replace">
            <t t-if="not line.display_type">
                <!--                <td name="td_sn" class="text-center">-->
                <!--                    <span t-esc="sn"/>-->
                <!--                    <br/>-->
                <!--                    <t t-set="sn" t-value="sn+1"/>-->
                <!--                </td>-->
                <td id="td_default_code" class="text-left" style="border-bottom: 1px solid black;">
                    <span t-field="line.product_id.default_code"/>
                </td>
                <td id="product" style="border-bottom: 1px solid black;">
                    <span t-field="line.name"/>
                </td>
                <!-- <td name="td_taxes" class="text-center">
                    <span t-esc="', '.join(map(lambda x: x.name, line.taxes_id))"/>
                </td> -->
                <td class="text-center" name="td_format" style="border-bottom: 1px solid black; ">
                    <t t-set="format" t-value="MMP"/>
                    <span>MMP</span>
                </td>
                <td class="text-center" style="border-bottom: 1px solid black;">
                    <span t-if="float(line.product_qty).is_integer()"
                          t-esc="int(line.product_qty)"/>
                    <span t-if="not float(line.product_qty).is_integer()"
                          t-field="line.product_qty"/>
                </td>

                <!--                <td class="text-center" name="td_uom">-->
                <!--                    <span t-field="line.product_uom.name" groups="uom.group_uom"/>-->
                <!--                </td>-->
                <td class="text-right" name="td_cover" style="border-bottom: 1px solid black;">
                    <span t-field="line.price_unit"/>
                </td>
                <td class="text-right" name="td_discount" style="border-bottom: 1px solid black;">
                    <div>
                        <span t-field="line.discount"/>%
                    </div>
                </td>
                <td class="text-right text-danger" name="td_bp_price" style="border-bottom: 1px solid black;">
                    <span t-field="line.disc_price_unit"/>
                </td>
                <!--                <td class="text-center">-->
                <!--                    <span t-field="line.price_unit"/>-->
                <!--                </td>-->
                <td class="text-right" style="border-bottom: 1px solid black; margin: auto; width: 100px;">
                    <span t-field="line.price_subtotal"
                          t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                </td>

            </t>

            <!--            <hr style="background-color:gray"/>-->
        </xpath>
        <!-- Add Comments before note field  -->
        <xpath expr="//p[@t-field='o.notes']" position="before">
            <div class="text-right text-danger">
                <span style="font-size: 12px; margin-right: 10px;">DO NOT PROCESS IF PRICES ARE INCORRECT</span>
            </div>

        </xpath>
        <!--        <xpath expr="//p[@t-field='o.notes']" position="replace">-->
        <!--            <t t-if="o.notes != '&lt;p&gt;&lt;br&gt;&lt;/p&gt;'">-->
