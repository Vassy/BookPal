        <!--                <div class="mx-4 mt-0">-->
        <!--                    <p t-field="o.notes"/>-->
        <!--                </div>-->
        <!--            </t>-->
        <!--        </xpath>-->
        <xpath expr="//p[@t-field='o.notes']" position="replace">
            <div class="mt-5 mx-3" t-if="o.notes">
                <strong>Purchase Order Terms and
                    Conditions
                </strong>
                <!--                    <hr class="mt-0 mb-1"/>-->
                <p class="mb-1" t-field="o.notes" style="margin-left: 50px;"/>
            </div>
            <!--            <div class="mx-4 mt-0">-->
            <!--                <p t-field="o.notes"/>-->
            <!--            </div>-->
        </xpath>

    </template>
    <template id="report_purchaseorder_document_extended2" inherit_id="purchase_stock.report_purchaseorder_document">
        <xpath expr="//t[@t-else='']" position="replace">
            <t t-else="">
                <t t-set="information_block">
                    <strong>SHIP TO:</strong>
                    <div t-if="o.picking_type_id and o.picking_type_id.warehouse_id">
                        <span t-field="o.picking_type_id.warehouse_id.name"/>
                        <div t-field="o.picking_type_id.warehouse_id.partner_id"
                             t-options='{"widget": "contact", "fields": ["address", "phone"], "no_marker": True, "phone_icons": True}'/>
                    </div>
                </t>
            </t>
        </xpath>
    </template>
    <template id="document_tax_totals_extended" inherit_id="account.document_tax_totals">
        <xpath expr="//td[1]" position="replace">
            <td style="border-right: 1px solid black;  margin: auto; width: 100px;">
                <strong>Subtotal</strong>
            </td>
        </xpath>

        <xpath expr="//t[@t-as='subtotal']" position="before">

            <tr class="border-black o_subtotal">
                <td>
                    <strong>Total W/D</strong>
                </td>
                <td class="text-right" style="border-left: 1px solid black; margin: auto; width :38.9%;">
                    <span t-field="o.without_disc_amount_untaxed"/>
                </td>
            </tr>
            <tr class="border-black o_subtotal">
                <td>
                    <strong>Discount</strong>
                </td>
                <td class="text-right" style="border-left: 1px solid black;">
                    <span t-field="o.total_discount_amount"/>
                </td>
            </tr>
            <t t-if="'groups_by_subtotal' in tax_totals and len(tax_totals['groups_by_subtotal']) == 0">
                <tr class="border-black o_subtotal">
                    <td>
                        <strong>Subtotal</strong>
                    </td>
                    <td class="text-right" style="border-left: 1px solid black;">
                        <!--                        <t t-set="subtotal"  t-value=""/>-->
                        <span t-esc="o.without_disc_amount_untaxed + o.total_discount_amount"
                              t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                        <!--                        <span t-esc="tax_totals"/>-->
                    </td>
                </tr>
                <tr class="border-black o_subtotal">
                    <td>
                        <strong>Tax</strong>
                    </td>
                    <td class="text-right" style="border-left: 1px solid black;">
                        <span t-esc="0.0" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                        <!--                        <span t-esc="tax_totals"/>-->
                    </td>
                </tr>
            </t>
        </xpath>
        <xpath expr="//tr[hasclass('o_total')]" position="before">
            <tr class="border-black o_subtotal">
                <td>
                    <strong>Shipping</strong>
                </td>
                <td class="text-right" style="border-left: 1px solid black;">
                    <div>
                        <span t-esc="0.0" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                    </div>
                </td>
            </tr>
        </xpath>

    </template>
    <template id="tax_groups_totals_extended" inherit_id="account.tax_groups_totals">
        <xpath expr="//t[@t-else='']//td[2]" position="attributes">
            <attribute name="class">text-right o_price_total bg-light</attribute>
            <attribute name="style">border-left: 1px solid black; margin-right: 2px;</attribute>
        </xpath>
        <xpath expr="//t[@t-else='']//td[1]/span" position="replace">
            <!--            <attribute name="class"> font-weight-bold</attribute>-->
            <strong class="text-nowrap" t-esc="amount_by_group['tax_group_name']"/>
        </xpath>
    </template>
</odoo>
