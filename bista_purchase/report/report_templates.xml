<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Customized header section for make the logo and company details single block -->
    <template id="external_layout_boxed_extended" inherit_id="web.external_layout_boxed">
        <xpath expr="//div[hasclass('o_boxed_header')]" position="replace">
            <t t-if="doc_model == 'purchase.order'">
                <div class="o_boxed_header">
                    <div class="row mb-3">
                        <div class="col-6">

                            <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" alt="Logo"/>
                            <div t-field="o.company_id.partner_id"
                                 t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}'/>

                        </div>
                        <div t-if="xmlid == 'purchase.report_purchaseorder'" name="report_info"
                             class="col-6 text-right mb4">
                            <!--                            <h3 t-if="o.state in []">Request for Quotation</h3>-->
                            <h3 t-if="o.state in ['draft','sent','purchase','done']">Purchase Order</h3>
                            <h3 t-if="o.state == 'cancel'">Cancelled Purchase Quotation/Order</h3>
                            <h4>
                                <strong>
                                    <t t-esc="o.name"/>
                                </strong>
                            </h4>
                            <strong t-if="o.state in ['purchase','done']">Order Date:
                                <t t-esc="o.date_approve" t-options='{"widget": "date"}'/>
                            </strong>
                            <strong t-if="o.state in ['draft','sent']">RFQ Date:
                                <t t-esc="o.date_order" t-options='{"widget": "date"}'/>
                            </strong>
                            <br/>
                        </div>
                        <div t-if="xmlid == 'purchase.report_purchasequotation'" name="report_info"
                             class="col-6 text-right mb4">
                            <h3 t-if="o.state in ['draft','sent','purchase','done']">Request for Quotation</h3>
                            <!--                            <h3 t-if="o.state in []">Purchase Order</h3>-->
                            <h3 t-if="o.state == 'cancel'">Cancelled Purchase Quotation/Order</h3>
                            <h4>
                                <strong>
                                    <t t-esc="o.name"/>
                                </strong>
                            </h4>
                            <strong t-if="o.state in ['purchase','done']">Confirm Date:
                                <t t-esc="o.date_approve" t-options='{"widget": "date"}'/>
                            </strong>
                            <strong t-if="o.state in ['draft','sent']">RFQ Date:
                                <t t-esc="o.date_order" t-options='{"widget": "date"}'/>
                            </strong>
                            <br/>
                        </div>
                    </div>
                </div>
                <t t-if="doc_model == 'purchase.order' and o.state in ['draft','sent'] and xmlid == 'purchase.report_purchaseorder'">
                    <div class="watermark"
                         style="top:450px; left: 90px; border: 2px solid green; font-size:7em; position:fixed; text-align:center; width:70%; opacity:0.25; -webkit-transform: rotate(-30deg);">
                        <p>Draft</p>
                    </div>
                </t>
            </t>
            <t t-elif="doc_model == 'sale.order'">
                <div class="o_boxed_header">
                    <div class="row mb8">
                        <div class="col-6">

                            <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" alt="Logo"/>
                            <div style="top-margin:50px; padding-bottom:10px;" t-field="o.company_id.partner_id"
                                 t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}'/>

                        </div>
                        <div name="report_info" class="col-6 text-right mb4">
                            <h3 t-if="doc.state in ['draft','sent']">Sales Quotation</h3>
                            <h3 t-if="doc.state in ['sale','done']">Sales Order
                            </h3>
                            <h3 t-if="doc.state in ['cancel']">Cancelled Quotation/Order
                            </h3>
                            <h4>
                                <strong>
                                    <t t-esc="o.name"/>
                                </strong>
                            </h4>
                            <strong t-if="doc.state in ['sale','done']">Order Date:
                                <!--                                <t t-esc="o.date_order" t-options='{"widget": "date"}'/> -->
                                <span t-esc="datetime.datetime.now()" t-options='{"widget": "date"}'></span>
                            </strong>

                            <strong t-if="doc.state in ['draft','sent']">Quotation Date:
                                <t t-esc="o.date_order" t-options='{"widget": "date"}'/>
                            </strong>

                            <strong t-if="doc.state in ['cancel']">Cancelled Date:
                                <t t-esc="o.date_order" t-options='{"widget": "date"}'/>
                            </strong>
                            <br/>
                        </div>
                    </div>
                </div>
            </t>
            <t t-else="">
                <div class="o_boxed_header">
                    <div class="row ">
                        <div class="col-6">
                            <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" alt="Logo"/>
                            <!-- <h4 class="mt0" t-field="company.report_header"/> -->
                            <div name="company_address" class="mb4" style="font-size: 15px; margin-bottom:10px;">
                                <span style="margin-bottom:10px;" t-if="company.company_details"
                                      t-field="company.company_details"/>
                            </div>
                        </div>
                        <div name="report_info" class="col-6 text-right mb4">

                        </div>
                    </div>
                </div>
            </t>
        </xpath>
        <xpath expr="//div[@t-attf-class='footer o_boxed_footer o_company_#{company.id}_layout']" position="replace">
            <t t-if="doc_model == 'purchase.order'and xmlid == 'purchase.report_purchaseorder' ">
                <div t-attf-class="footer o_boxed_footer o_company_#{company.id}_layout">
