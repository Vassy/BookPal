<!--                                                    Page: <span class="page"/> / <span class="topage"/>-->
<!--                                                </div>-->
<!--                    </div>-->
<!--                </div>-->
<!--            </t>-->
            <t t-else="">
                <div t-attf-class="footer o_boxed_footer o_company_#{company.id}_layout"
                     style="margin-bottom: 0px; margin-left: 0px; margin-right: 0px;">
                    <div class="text-center last-page">
                        <div class="mb-0" style="margin-bottom: 0px;">
                            <span t-field="res_company.partner_id.name" style="margin-left: 15px; margin-right: 15px;"/>
                            |
                            <span t-field="res_company.partner_id.street"
                                  style="margin-left: 15px; margin-right: 15px;"/>
                            |
                            <span t-field="res_company.partner_id.phone"
                                  style="margin-left: 15px; margin-right: 15px;"/>
                            |
                            <span style="margin-left: 15px;margin-right: 15px;" t-field="res_company.partner_id.phone"/>
                            |
                            <span t-field="res_company.partner_id.website"
                                  style="margin-left: 15px; margin-right: 15px;"/>
                        </div>

                    </div>
                    <div t-if="report_type == 'pdf'" class="text-center mt-1">
                        Page:
                        <span class="page"/>
                        /
                        <span class="topage"/>
                    </div>
                </div>
            </t>
        </xpath>
        <xpath expr="//div[hasclass('pt-5')]" position="replace">
            <t t-call="web.address_layout"/>
        </xpath>
    </template>
    <template id="address_layout_extended" inherit_id="web.address_layout">
        <xpath expr="//div[hasclass('address', 'row')]" position="replace">
            <div class="address row" style="margin-left: 5px; margin-bottom:10px;">
                <div name="address" class="col-4">
                    <t t-esc="address"/>
                </div>
                <t t-if="information_block">
                    <t t-set="colclass" t-value="'col-5 offset-1'"/>
                    <div name="information_block" class="col-4">
                        <t t-out="information_block"/>
                    </div>
                </t>
                <div name="custom_information_block" class="col-4"/>
            </div>
        </xpath>
    </template>
</odoo>
