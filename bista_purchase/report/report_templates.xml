                            <span t-field="res_company.partner_id.name" style="margin-left: 15px; margin-right: 15px;"/>
                            |
                            <span style="margin-left: 15px;" t-field="res_company.partner_id.city"/>
                            <span t-field="res_company.partner_id.state_id"/>
