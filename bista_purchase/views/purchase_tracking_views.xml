<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="purchase_tracking_form_view" model="ir.ui.view">
        <field name="name">purchase.tracking.form</field>
        <field name="model">purchase.tracking</field>
        <field name="arch" type="xml">
            <form string="Purchase Tracking Form">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="order_id" readonly="1" force_save="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="picking_type_id"/>
                        </group>
                        <group>
                            <field name="date_order" string="Order Date"/>
                            <field name="date_approve"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="carrier_id"/>
                            <field name="tracking_ref"/>
                            <field name="shipment_date"/>
                        </group>
                        <group>
                            <field name="shipment_name"/>
                            <field name="status"/>
                        </group>
                    </group>
                    <field name="tracking_line_ids" nolabel="1" context="{'active_id':active_id}">
                        <tree editable="top" create="0">
                            <field name="po_line_id" readonly="0" force_save="1" invisible="1"/>
                            <field name="product_id" readonly="0" force_save="1"/>
                            <field name="ship_qty"/>
                        </tree>
                    </field>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="purchase_tracking_tree_view" model="ir.ui.view">
        <field name="name">purchase.tracking.tree</field>
        <field name="model">purchase.tracking</field>
        <field name="arch" type="xml">
            <tree string="Purchase Tracking Tree" create="1">
                <field name="tracking_ref"/>
                <field name="shipment_date"/>
                <field name="shipment_name"/>
            </tree>
        </field>
    </record>

</odoo>
