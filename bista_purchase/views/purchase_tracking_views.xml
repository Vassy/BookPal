<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="purchase_tracking_form_view" model="ir.ui.view">
        <field name="name">purchase.tracking.form</field>
        <field name="model">purchase.tracking</field>
        <field name="arch" type="xml">
            <form string="Purchase Tracking Form">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="order_id" readonly="1" force_save="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="picking_type_id"/>
                        </group>
                        <group>
                            <field name="date_order" string="Order Date"/>
                            <field name="date_approve"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="carrier_id"/>
                            <field name="tracking_ref" required="1"/>
                            <field name="shipment_date" required="1"/>
                        </group>
                        <group>
                            <field name="pro_number" string="PRO No."/>
                            <field name="status"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="trackings" string="Trackings">
                            <field name="tracking_ref_ids" nolabel="1">
                                <tree editable="bottom" create="1">
                                    <field name="name"/>
                                    <field name="link" widget="url"/>
                                </tree>
                            </field>
                        </page>
                        <page name="products" string="Products">
                            <field name="tracking_line_ids" nolabel="1" context="{'active_id':active_id}">
                                <tree editable="bottom" create="0" delete="0" default_order="ship_qty desc">
                                    <field name="checkbox" readonly="0" nolabel="1"/>
                                    <field name="po_line_id" readonly="1" force_save="1" invisible="0"/>
                                    <field name="product_id" readonly="1" force_save="1" invisible="1"/>
                                    <field name="order_qty"/>
                                    <field name="ship_qty" string="Shipped Quantity"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
<!--                <footer>-->
<!--                    <button string="Save" type="object" class="btn-primary" name="save"/>-->
<!--                    <button string="Cancel" class="btn-secondary" special="cancel"/>-->
<!--                </footer>-->
            </form>
        </field>
    </record>

    <record id="purchase_tracking_tree_view" model="ir.ui.view">
        <field name="name">purchase.tracking.tree</field>
        <field name="model">purchase.tracking</field>
        <field name="arch" type="xml">
            <tree string="Purchase Tracking Tree" create="0">
                <field name="tracking_ref" required="1"/>
                <field name="shipment_date" required="1" optional="show"/>
                <field name="carrier_id" optional="show"/>
                <field name="pro_number" optional="show"/>
                <field name="status" optional="hide"/>
            </tree>
        </field>
    </record>

</odoo>
