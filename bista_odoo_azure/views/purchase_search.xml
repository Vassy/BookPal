<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id="view_purchase_order_filter_automated_trackings" model="ir.ui.view">
        <field name="name">purchase.order.inherit.automated.tracking</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.view_purchase_order_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='late_rfqs']" position="after">
                <separator/>
                <filter string="Has Tracking Created by Automation" name="has_tracking_made_by_automation"
                        domain="[('has_tracking_made_by_automation','=', True)]"/>
                <separator/>
            </xpath>
        </field>
    </record>

</odoo>