<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_approval_button_inherit" model="ir.ui.view">
        <field name="name">Sale order approval button</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <button name="action_cancel" position="attributes">
                <attribute name="attrs">{"invisible": [("state", "in", ["done", "cancel"])]}</attribute>
            </button>
            <xpath expr="//button[@name='action_quotation_send']" position="attributes">
                <attribute name="states">quote_confirm</attribute>
            </xpath>
            <xpath expr="//button[@name='action_quotation_send']" position="after">
                <button name="action_send_quote_approval" string="Send For Approval Quotation" type="object" class="btn-primary" states="draft" />
                <button name="action_quote_confirm" string="Confirm Quotation" type="object" class="btn-primary" states="draft" />
                <button name="action_quote_confirm" string="Approve" type="object" states="quote_approval"
                    groups="bista_sales_approval.group_sale_approval_admin" class="btn-primary" />
                <button name="action_send_for_approval" string="Send For Approval" type="object" class="btn-primary"
                    attrs="{'invisible': [('state', 'not in', ['quote_confirm', 'sent', 'customer_approved'])]}" />
                <button name="action_approval" string="Approve" type="object" states="pending_for_approval"
                    groups="bista_sales_approval.group_sale_approval_admin" class="btn-primary" />
                <button name="action_reject" string="Reject" type="object" states="quote_approval,pending_for_approval"
                    groups="bista_sales_approval.group_sale_approval_admin" class="btn-primary" />
            </xpath>
            <xpath expr="//header/button[@name='action_confirm'][2]" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//header/button[@name='action_confirm'][1]" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <notebook position="inside">
                <page name="sale_approval_log_ids" string="Approval Status">
                    <field name="sale_approval_log_ids">
                        <tree string="Approval Status" editable="top" create="0" delete="0">
                            <field name="action_user_id" readonly="1" options="{'no_open': True}" />
                            <field name="action_date" readonly="1" />
                            <field name="done_action" readonly="1" />
                            <field name="note" readonly="1" />
                        </tree>
                    </field>
                </page>
            </notebook>
        </field>
    </record>

    <record id="sale_order_view_search_quotation_approval" model="ir.ui.view">
        <field name="name">sale.order.inherit.approval</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.sale_order_view_search_inherit_quotation" />
        <field name="arch" type="xml">
            <filter name="draft" position="after">
                <filter string="Quotation Approval" name="quote_approval" domain="[('state', '=', 'quote_approval')]"/>
                <filter string="Quotation Confirmed" name="quote_confirm" domain="[('state', '=', 'quote_confirm')]"/>
                <filter string="Pending for Approval" name="order_approval" domain="[('state', '=', 'pending_for_approval')]"/>
            </filter>
        </field>
    </record>

    <record id="to_approve_sale_orders" model="ir.actions.act_window">
        <field name="name">Sale Orders To Approve</field>
        <field name="res_model">sale.order</field>
        <field name="view_id" ref="sale.view_quotation_tree" />
        <field name="domain">[("state", "in", ["quote_approval", "pending_for_approval"])]</field>
    </record>

    <menuitem id="pending_for_approval_orders" action="to_approve_sale_orders" name="Quotations To Approve" parent="sale.sale_order_menu" groups="bista_sales_approval.group_sale_approval_admin" />
</odoo>
