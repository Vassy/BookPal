<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="paperformat_quotation_sale_report" model="report.paperformat">
        <field name="name">Sale/Quotation Report</field>
        <field name="default" eval="False"/>
        <field name="disable_shrinking" eval="True"/>
        <field name="format">A4</field>
        <field name="orientation">Portrait</field>
        <field name="header_spacing">25</field>
        <field name="margin_top">28</field>
        <field name="margin_bottom">18</field>
        <field name="margin_left">7</field>
        <field name="margin_right">7</field>
        <field name="header_line">False</field>
        <field name="dpi">115</field>
    </record>
    <template id="report_saleorder_document_extended"
              inherit_id="sale.report_saleorder_document">
        <xpath expr="//t[@t-call='web.external_layout']" position="attributes">
            <attribute name="t-call">bista_report_header_footer.shipment_custom_header</attribute>
        </xpath>
        <xpath expr="//div[hasclass('page')]" position="inside">
            <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)"/>
            <t t-set="o" t-value="doc.with_context(lang=doc.partner_id.lang)"/>
            <div class="page">
                <div t-set="address">
                <div class="row">
                <div class="col-12" style="margin-top:16px;">
                    <strong>Prepared For:</strong>
                    <t t-if="o.partner_id.parent_id.name">
                        <div>
                            <strong> Name/Account :</strong><br/>
                            <span t-field="o.partner_id.name"/>
                            <br/>
                            <span t-field="o.partner_id.parent_id.name"/>
                        </div>
                            <div>
                            <strong>Customer Address:</strong><br/>
                                <span t-field="o.partner_id.street"/>
                                <br/>
                                <span t-if="o.partner_id.street2" t-field="o.partner_id.street2"/>
                                <br t-if="o.partner_id.street2"/>
                                <span t-field="o.partner_id.city"/>, 
                                <span t-if="o.partner_id.state_id.code" t-field="o.partner_id.state_id.code"/>
                                <span t-if="not o.partner_id.state_id.code" t-field="o.partner_id.state_id.name"/>
                                <span t-field="o.partner_id.zip"/>
                                <br/>
                                <span t-field="o.partner_id.country_id.name"/>
                              </div>
                                <strong>Email:</strong>
                                <span t-field="o.partner_id.email"/>
                                <br/>
                                <strong>Phone:</strong>
                                <span t-field="o.partner_id.phone"/>
                    </t>
                    <t t-else="">
                        <div>
                           <strong> Name/Account:</strong><br/>
                            <span t-field="o.partner_id.name"/>
                            <br/>
                            <strong>Customer Address:</strong><br/>
                                <div t-if="o.partner_id.street">
                                <span t-field="o.partner_id.street"/>
                                <span t-if="o.partner_id.street2" t-field="o.partner_id.street2"/><br t-if="o.partner_id.street2"/>
                                <span t-field="o.partner_id.city"/>, 
                                <span t-if="o.partner_id.state_id.code" t-field="o.partner_id.state_id.code"/>
                                <span t-if="not o.partner_id.state_id.code" t-field="o.partner_id.state_id.name"/>
                                <span t-field="o.partner_id.zip"/>
                                <br/>
                                <span t-field="o.partner_id.country_id.name"/>
                                </div>
                                <strong> Email:</strong>
                                <span t-field="o.partner_id.email"/>
                                <br/>
                                <strong> Phone:</strong>
                                <span t-field="o.partner_id.phone"/>
                        </div>
                    </t>
                </div>
                </div>
                </div>
                <t t-set="report_info"
                   class="col-6 text-right">
                    <h3 t-if="o.state in ['sale','order_booked','credit_review','pending_for_approval','cancel','done']">Sale Order</h3>
                    <h3 t-if="o.state in ['draft','sent','quote_approval','quote_confirm']">Quotation</h3>
                    <h3 t-if="o.state == 'cancel'">Cancelled Sale Quotation/Order</h3>
                    <h4>
                        <strong><span t-field="o.name" /></strong>
                    </h4>
                    <t t-if="doc.state in ['draft','sent','quote_approval','quote_confirm']">
                        <span t-field="o.date_order" t-options="{'widget': 'date'}"/>
                        <br/>
                    </t>
                    <t t-if="doc.state in ['order_booked']">
                        <span t-field="o.date_order" t-options="{'widget': 'date'}"/>
                        <br/>
                    </t>
                    <t t-if="doc.state  in ['sale','pending_for_approval','credit_review','cancel','done']">
                            <span t-field="o.date_order" t-options="{'widget': 'date'}"/>
                        <br/>
                    </t>
                </t>
                <t t-set="report_tagline">
                    <div class="o_boxed_header row" style="font-style: italic; font-size: 20px;">
                        <div class="col-12">
                            <span t-if="o.state in ('draft','sent','quote_approval', 'quote_confirm')" class="text-center" style="margin-bottom: 0rem !important;font-size:20px;" t-field="o.company_id.quote_tag_line"></span>
                            <span t-else="" class="text-center" style="margin-bottom: 0rem !important;font-size:20px;" t-field="o.company_id.so_tag_line"></span>
                        </div>
                    </div>
                </t>
                <t t-set="information_block">
                    <div class="row">
                        <div class="col-12" style="margin-top:16px;">
                            <t t-if="doc.split_shipment">
                            </t>
                            <t t-else="">
                                <strong>Shipping Address:</strong>
                                <t t-if="o.partner_shipping_id.parent_id.name">
                                    <div>
                                        <span t-field="doc.partner_shipping_id.name"/>
                                        <br/>
                                         <t t-if="not o.partner_shipping_id.external_company">
                                            <span t-field="o.partner_shipping_id.parent_id.name"/>
                                        </t>
                                        <t t-else="">
                                            <span t-field="o.partner_shipping_id.external_company"/>
                                        </t>
                                    </div>
                                    <div t-field="o.partner_shipping_id" t-options='{"widget": "contact", "fields": ["address"], "no_marker": True}'/>
                                </t>
                                <t t-else="">
                                    <br/>
                                    <div t-field="o.partner_shipping_id" t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}'/>
                                </t>
                            </t>
                        </div>
                    </div>
                </t>
                <t t-set="custom_information_block">
                    <div class="row">
                    <div class="col-12" style="margin-top:16px;">
                        <t t-if="o.commitment_date">
                            <strong>Need By Date:</strong>
                            <span t-field="o.commitment_date" t-options="{'widget': 'date'}"/>
                            <br/>
                        </t>
                        <t t-if="o.event_date">
                            <strong>Event Date:</strong>
                            <span t-field="o.event_date" t-options="{'widget': 'date'}"/>
                            <br/>
                        </t>
                        <t t-if="doc.validity_date and doc.state not in ['sale','credit_review','pending_for_approval','cancel','done']">
                            <strong>Valid Until:</strong>
                            <span t-field="doc.validity_date" t-options="{'widget': 'date'}"/>
                            <br/>
                        </t>
                        <strong>Quoted By:</strong>
                        <span t-field="o.user_id.name"/>
                        <br/>
                        <strong>Email:</strong>
                        <span t-field="o.user_id.email"/>
                        <br/>
                        <strong>Phone:</strong>
                        <span t-field="o.user_id.phone"/>
                        <br/>
                    </div>
                </div>
                </t>
            </div>

        </xpath>
        <xpath expr="//table[hasclass('table','table-sm','o_main_table')]" position="before">
            <span style="font-size:20px;">
                <strong>Product Details</strong>
            </span>
            <t t-set="line_taxes" t-value="any(line.tax_id for line in doc.order_line)"/>
        </xpath>
        <xpath expr="//thead" position="replace">
            <thead>
                <tr style="border-top: 1px solid black;">
                    <th style="border: none;" name="th_sn" class="text-center" width="5%">
                        <strong></strong>
                    </th>
                    <th style=" border-collapse: collapse;
                   border: none;" name="th_image" ></th>
                    <!-- <th style=" border-collapse: collapse;
                   border: none;" name="th_isbn" class="text-left">ISBN
                    </th> -->
                    <th  style=" border-collapse: collapse;
                   border: none;" name="image" class="text-left">Description
                    </th>
                    <!-- <th style=" border-collapse: collapse;
                   border: none;" name="th_format" class="text-left">Format
                    </th> -->
                    <th style=" border-collapse: collapse;
                   border: none;" name="th_quantity" class="text-center">Qty
                    </th>
                    <th style=" border-collapse: collapse;
                   border: none;" name="th_uom" class="text-center">Cover
                    </th>
                    <th style=" border-collapse: collapse;
                   border: none;" name="th_priceunit" class="text-center">Price
                    </th>
                    <th style=" border-collapse: collapse;
                   border: none;" name="th_discount" class="text-center">Discount
                    </th>
                    <th name="th_taxes" t-if="line_taxes" class="text-center"
                        style=" border-collapse: collapse;border: none; display:none !important;">
                        <span>Taxes</span>
                    </th>
                    <th style=" border-collapse: collapse;
                   border: none;padding-left:15px;" name="th_subtotal" class="text-right">
                        <span groups="account.group_show_line_subtotals_tax_excluded">
                            Subtotal
                        </span>
                        <span groups="account.group_show_line_subtotals_tax_included">
                            Total Price
                        </span>
                    </th>
                </tr>
            </thead>

        </xpath>
        <xpath expr="//t[@t-foreach='doc.order_line']" position="before">
            <t t-set="sn" t-value="1"/>
        </xpath>
        <xpath expr="//t[@t-if='not line.display_type']" position="replace">
            <t t-if="not line.display_type">
                <td name="td_sn" class="text-center">
                    <span t-esc="sn"/>
                    <br/>
                    <t t-set="sn" t-value="sn+1"/>
                </td>
                <td name="image" class="text-left">
                    <t t-if="line.product_id.image_1920">
                        <img t-attf-src="data:image/*;base64,{{line.product_id.image_1920}}"
                             style="height:80px; width:80px;"/>
                    </t>
                    <t t-else="">
                        <img src="/web/static/img/placeholder.png" style="max-height:100px; max-width:100px;"/>
                    </t>
                </td>
               <!--  <td name="td_sku" class="text-center">
                    <span t-if="line.product_template_id.default_code" t-field="line.product_template_id.default_code"/>
                    <span t-if="not line.product_template_id.default_code" t-field="line.product_template_id.isbn"/>
                </td> -->
                <td name="td_name" class="text-left">
                    <b>
                        <span t-field="line.product_template_id.name"/>
                        <br/>
                        <t t-if="line.product_template_id.default_code or line.product_template_id.default_code">
                        <span style="font-weight: bold;">ISBN:</span>
                        <span t-if="line.product_template_id.default_code" t-field="line.product_template_id.default_code"/>
                        <span t-if="not line.product_template_id.default_code" t-field="line.product_template_id.isbn"/><br/>
                        </t>
                        <t t-if="line.product_format">
                            <span style="font-weight: bold;">Format:</span>
                            <span t-field="line.product_format" /><br/>
                        </t>
                    </b>
                </td>
                <!-- <td name="td_format" class="text-center">
                    <span t-field="line.product_id.product_format"/>
                </td> -->
                <td name="td_quantity" class="text-center">
                    <span t-if="float(line.product_uom_qty).is_integer()"
                          t-esc="int(line.product_uom_qty)"/>
                    <span t-if="not float(line.product_uom_qty).is_integer()"
                          t-field="line.product_uom_qty"/>
                </td>
                <td name="td_uom" class="text-right">
                    <t t-if="line.discount">
                        <s>
                            <span t-field="line.price_unit"
                                  t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                        </s>
                    </t>
                    <t t-else="">
                        <span t-field="line.price_unit"
                              t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                    </t>
                </td>
                <td name="td_priceunit" class="text-right">
                    <span>
                        <t t-if="line.discount">
                            <t t-esc="line.price_unit-((line.discount/100)*line.price_unit)"
                               t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                        </t>
                        <t t-else="">
                            <span t-field="line.discounted_price"
                                  t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                        </t>
                    </span>
                </td>
                <td name="td_discount" class="text-center">
                    <span t-out="round(line.discount)"/>%
                </td>
                <td t-if="line_taxes" name="td_taxes" class="text-center" style="display:none !important;">
                    <span t-esc="', '.join(map(lambda x: (x.name), line.tax_id))"/>
                </td>
                <td name="td_subtotal" class="text-right">
                    <t t-if="line.price_subtotal">
                        <span t-field="line.price_subtotal"
                              groups="account.group_show_line_subtotals_tax_excluded"/>
                        <span t-field="line.price_total"
                              groups="account.group_show_line_subtotals_tax_included"/>
                    </t>
                    <t t-else="">
                        <span style="padding-left:22px;" t-field="line.price_subtotal"/>
                    </t>
                </td>
            </t>
        </xpath>
        <xpath expr="//table[hasclass('table', 'table-sm', 'o_main_table')]"
               position="attributes">
            <attribute name="style">margin-top: 10px; border:none;</attribute>
        </xpath>
        <!-- Hidden payment terms from base  -->
        <xpath expr="//p[@t-if='not is_html_empty(doc.payment_term_id.note)']"
               position="replace">
        </xpath>
        <!-- Added "Customer Details" label in report  -->
        <xpath expr="//div[@t-field='doc.partner_id']" position="before">
            <strong>Customer Details</strong>
        </xpath>
        <!-- Hidden information block from base report  -->
        <xpath expr="//div[hasclass('page')]/div[@id='informations']" position="replace"/>
        <!-- Hidden Quotation & Order # from base report  -->
        <xpath expr="//div[hasclass('page')]/h2" position="replace">
        </xpath>
        <!-- added total saving  beside total summery table  -->
        <xpath expr="//div[@name='so_total_summary']" position="replace">
            <div class="clearfix row" name="so_total_summary" style="page-break-inside:avoid;">
                <div class="col-6"/>
                <div name="footer_table" class="col-6 row justify-content-end" style="display:flex;padding:2px;">
                    <div width="70%" style="padding-right:40px;">
                        <div class="text-right" style="font-size: 14px;">
                            Subtotal
                        </div>
                        <div class="text-right" t-if="doc.amount_tax" style="font-size: 14px;">
                            Tax
                        </div>
                        <div class="text-right" t-if="doc.carrier_id" style="font-size: 14px;">
                            Shipping
                            (<span t-field="doc.carrier_id"/>)
                        </div>
                        <div class="text-right" style="font-size: 20px;">
                            <strong>Total</strong>
                        </div>
                        <div class="text-right text-muted" style="font-size: 12px;">
                           Total Savings
                        </div>
                    </div>
                    <div width="30%">
                        <div class="text-right" style="font-size: 14px;">
                            <span t-field="doc.amount_untaxed"  t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                        </div>
                        <div class="text-right" t-if="doc.amount_tax" style="font-size: 14px;">
                            <span t-field="doc.amount_tax" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                        </div>
                        <div class="text-right" t-if="doc.carrier_id" style="font-size: 14px;">
                            <t t-esc="sum([line.price_total for line in doc.order_line if line.is_delivery])" t-if="doc.carrier_id"
                                   t-options='{"widget": "monetary", "display_currency": doc.currency_id}'>
                            </t>
                        </div>
                        <div class="text-right" style="font-size: 20px;">
                            <strong t-field="doc.amount_total" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                        </div>
                        <div class="text-right text-muted" style="font-size: 12px;">
                            <span t-esc="sum((line.product_uom_qty*line.price_unit)-line.price_subtotal for line in doc.order_line)"
                                        t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                        </div>
                    </div>
                </div>
            </div>
            <br/><br/>
        </xpath>

        <xpath expr="//p[@t-field='doc.note']" position="after">
            <div style="page-break-inside:avoid;">
                <div class="text-center" style="margin-top:10px;">
                    <p class="mt-5" style="margin-left: 325px;width:26%; height:50pt;background-color:red;">
                        <a t-att-href="doc.sudo().compute_customer_preview_url()" class="btn btn-link" role="button"
                           style="margin-top:15px;">
                            <strong style="color: #FFFFFF;">Proceed to Checkout</strong>
                        </a>
                    </p>
                </div>
                <div class="text-center">
                    <img src='/bista_sale/static/src/img/payment_logo.png' style="max-height: 45px; " class="mt-0"/>
                </div>
                <div class="text-center" style="margin-top: -8px !important;">
                        <span style="margin-bottom:0px;">ACH / Wire Instructions available upon request.</span>
                         <div style="margin-top: -12px !important;">
                        <strong >Interested in using a Purchase Order, click here:<a href=" https://bkp.al/PO" class="btn btn-link" role="button" style="margin-left:-10px;"> https://bkp.al/PO</a></strong>
                         </div>
                </div>
           </div>
        </xpath>
        <xpath expr="//p[@t-field='doc.note']" position="replace"/>
        <xpath expr="//div[@name='so_total_summary']" position="after">
            <div class="row mt-5 mx-3" style="page-break-inside:avoid;" name="price_images">
                <div class="col-4">
                    <div>
                        <img src='/bista_sale/static/src/img/i.shgcdn.png' style="max-height: 100px;" class="ml-5"/>
                        <a href="https://bookpal.com/price-match-guarantee" class="btn btn-link" role="button">Price
                            Match
                            Available
                        </a>
                    </div>
                </div>
                <div class="col-4">
                    <div>
                        <img src='/bista_sale/static/src/img/i.shgcdn-1.png' style="max-height: 100px;"
                             class="ml-5"/>
                        <a href="https://bookpal.com/sales-tax-exemption/" class="btn btn-link" role="button">Sales Tax
                            Exempt? Learn more here.
                        </a>
                    </div>
                </div>
                <div class="col-4">
                    <div>
                        <img src='/bista_sale/static/src/img/i.shgcdn-2.png' style="max-height: 100px;"
                             class="ml-5"/>
                        <a href="https://bookpal.com/shipping-logistics" class="btn btn-link" role="button">Learn about
                            our
                            Shipping Options
                        </a>
                    </div>
                </div>
            </div>
            <div t-if="doc.note" style="page-break-inside:avoid;">
                <h5 style="margin-top:50px;border-bottom:solid 1px;">Order Terms and Conditions</h5>
                <div>
                    <span class="mb4" t-field="doc.note" style="margin-left: 50px;"/>
                </div>
            </div>
        </xpath>

    </template>
     <record id="sale.action_report_saleorder" model="ir.actions.report">
        <field name="print_report_name">
                (object.state in ('draft','sent','quote_approval','quote_confirm') and 'Quotation - %s' % (object.name) or
               'Order - %s' % (object.name))</field>
         <field name="paperformat_id" ref="bista_sale.paperformat_quotation_sale_report"/>
    </record>
</odoo>