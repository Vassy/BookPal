<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="paperformat_shipment_report" model="report.paperformat">
            <field name="name">Shipment Report</field>
            <field name="default" eval="False"/>
            <field name="disable_shrinking" eval="True"/>
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="header_spacing">27</field>
            <field name="margin_top">28</field>
            <field name="margin_bottom">20</field>
            <field name="margin_left">0</field>
            <field name="margin_right">0</field>
            <field name="header_line">False</field>
            <field name="dpi">105</field>
        </record>

        <record id="shipment_report_action" model="ir.actions.report">
            <field name="name">Shipment Plan</field>
            <field name="model">sale.order</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">bista_sale_multi_ship.report_shipment</field>
            <field name="report_file">bista_sale_multi_ship.report_shipment</field>
            <field name="print_report_name">(object.state in ('draft', 'sent') and 'Quotation - %s' % (object.name)) or 'Order - %s' % (object.name)</field>
            <field name="binding_model_id" eval='False'/>
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="paperformat_shipment_report"/>
        </record>

    </data>
</odoo>
