<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_shipment_document">
        <t t-call="bista_report_header_footer.shipment_custom_header">
            <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)"/>
            <t t-set="o" t-value="doc.with_context(lang=doc.partner_id.lang)"/>
            <div class="page">
                <div t-set="address">
                    <strong>Customer Detail:</strong>
                    <div t-field="doc.partner_id"
                         t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                </div>
                <t t-set="report_info"
                   class="col-6 text-right mb4">
                    <h3 t-if="o.state != 'draft'">Sale Order</h3>
                    <h3 t-if="o.state == 'draft'">Quotation</h3>
                    <h3 t-if="o.state == 'cancel'">Cancelled Sale Quotation/Order</h3>
                    <h4>
                        <strong>
                            <t t-esc="o.name"/>
                        </strong>
                    </h4>
                    <strong>Order Date:
                        <t t-esc="o.date_order" t-options='{"widget": "date"}'/>
                    </strong>
                    <br/>
                </t>
                <t t-set="information_block">
                    <t t-if="doc.state not in ['draft', 'sent']">
                        <strong>Invoicing Address:</strong>
                        <div t-field="doc.partner_invoice_id"
                             t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                    </t>
                </t>
                <t t-set="custom_information_block">
                    <div>
                        <t t-if="doc.state in ['draft','sent']">
                            <strong>Quotation:</strong>
                            <t t-esc="doc.name"/>
                            <br/>
                        </t>
                        <t t-if="doc.state not in ['draft','sent']">
                            <strong>Sale Order:</strong>
                            <t t-esc="doc.name"/>
                            <br/>
                        </t>
                        <t t-if="doc.state in ['draft','sent']">
                            <strong>Quotation Date:</strong>
                            <t t-esc="o.date_order" t-options='{"widget": "date"}'/>
                            <br/>
                        </t>
                        <t t-if="doc.state not in ['draft','sent']">
                            <strong>Order Date:</strong>
                            <span t-esc="datetime.datetime.now()" t-options='{"widget": "date"}'>
                            </span>
                            <br/>
                        </t>
                        <strong>Customer Ref:</strong>
                        <t t-esc="doc.client_order_ref"/>
                        <br/>
                        <strong>Valid Until:</strong>
                            <t t-esc="doc.validity_date" t-options='{"widget": "date"}'/>
                        <br/>
                        <strong>Salesperson:</strong>
                        <t t-esc="o.user_id.name"/>
                        <br/>
                    </div>
                </t>
                <table class="table table-sm o_main_table mt-5">
                    <!-- In case we want to repeat the header, remove "display: table-row-group" -->
                    <thead style="display: table-row-group">
                        <tr style="border-top: 1px solid black;">
                            <th style="border: none;" name="th_nd" class="text-center">
                                <strong>Need By Date</strong>
                            </th>
                            <th style=" border-collapse: collapse;border: none;" name="shipment_add"
                                class="text-center">
                                <span>Shipment Address</span>
                            </th>
                            <th style=" border-collapse: collapse;border: none;" name="th_description"
                                class="text-center">
                                <span>Description</span>
                            </th>
                            <th style=" border-collapse: collapse;border: none;" name="th_quantity" class="text-center">
                                <span>Quantity</span>
                            </th>
                            <th style=" border-collapse: collapse;border: none;" name="th_uom" class="text-center">
                                <span>UOM</span>
                            </th>
                            <th style=" border-collapse: collapse;border: none;" name="th_priceunit"
                                class="text-center">
                                <span>Unit Price</span>
                            </th>
                            <th style=" border-collapse: collapse;border: none;padding-left:15px;" name="th_subtotal"
                                class="text-center">
                                <span>Amount</span>
                            </th>
                        </tr>
                    </thead>
                    <tbody class="sale_tbody">
                        <t t-foreach="doc.sale_multi_ship_qty_lines" t-as="line">
                            <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.so_line_id.display_type == 'line_section' else 'font-italic o_line_note' if line.so_line_id.display_type == 'line_note' else ''">
                                <t t-if="not line.so_line_id.display_type">
                                    <td name="td_nd"
                                        style="border-top: 1px solid black; border-left: none;border-right: none; border-bottom: 1px solid black;"
                                        class="text-center">
                                        <span t-field="line.shipping_date"/>
                                    </td>
                                    <td name="shipment_add"
                                        style="border-top: 1px solid black; border-left: none; border-right: none; border-bottom: 1px solid black;"
                                        class="text-center">
                                        <span t-field="line.partner_id"/>
                                    </td>
                                    <td name="td_name"
                                        style="width:30%; border-top: 1px solid black; border-left: none;border-right: none; border-bottom: 1px solid black;"
                                        class="text-center">
                                        <span t-field="line.product_id"/>
                                    </td>
                                    <td name="td_quantity"
                                        style="border-top: 1px solid black; border-left: none;border-right: none;border-bottom: 1px solid black;"
                                        class="text-center">
                                        <span t-if="float(line.product_qty).is_integer()"
                                              t-esc="int(line.product_qty)"/>
                                        <span t-if="not float(line.product_qty).is_integer()"
                                              t-field="line.product_qty"/>
                                    </td>
                                    <td name="td_uom"
                                        style="border-top: 1px solid black; border-left: none;border-right: none; border-bottom: 1px solid black;"
                                        class="text-center">
                                        <span t-field="line.product_uom"/>
                                    </td>
                                    <td name="td_price_unit"
                                        style=" border-top: 1px solid black; border-left: none;border-right: none; border-bottom: 1px solid black;"
                                        class="text-center">
                                        <span t-field="line.so_line_id.price_unit"
                                              t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                                    </td>
                                    <td name="td_subtotal"
                                        style="border-top: 1px solid black; border-left: none;border-right: none; border-bottom: 1px solid black;"
                                        class="text-right">
                                        <span t-esc="line.product_qty * line.so_line_id.price_unit"
                                              t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                                    </td>
                                </t>
                            </tr>
                        </t>
                    </tbody>
                </table>
                <div class="text-right">
                    <t t-set="current_sub" t-value="0"/>
                    <t t-foreach="doc.sale_multi_ship_qty_lines" t-as="line">
                        <t t-set="current_sub" t-value="current_sub + (line.product_qty* line.so_line_id.price_unit)"/>
                    </t>
                    <table style="border: 1px solid black; width: 26%; margin-left:74%;" class="text-right">
                        <tr>
                            <td class="text-left"
                                style="height:1px; border-left: 1px solid black; border-right: 1px solid black; width:180px; border-top: 1px solid black; color: black; padding-left:10px;">
                                <strong>Subtotal</strong>
                            </td>
                            <td class="text-right"
                                style="padding-right:8px; border-left: 1px solid black; border-right: 1px solid black; height:1px; border-top: 1px solid black; padding-left:10px; background-color: white;">
                                <span t-esc="current_sub"
                                      t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </t>
    </template>
    <template id="report_shipment">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="bista_sale_multi_ship.report_shipment_document" t-lang="doc.partner_id.lang"/>
            </t>
        </t>
    </template>

</odoo>
